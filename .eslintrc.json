{
  "parser": "babel-eslint",
  "plugins": ["react-native", "jsx-a11y", "import"],
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {}
    },
    "node": {
      "paths": ["src"]
    },
    "babel-module": {}
  },
  "env": {
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": "off"
  }
}
